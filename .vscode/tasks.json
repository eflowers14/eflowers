{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build active file",
            "command": "${input:compiler}",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}${input:extension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "inputs": [
                {
                    "id": "compiler",
                    "description": "Select compiler/interpreter",
                    "default": "python",
                    "options": [
                        "python",
                        "python -m flask run",
                        "node",
                        "ruby",
                        "Rscript",
                        "javac",
                        "gcc",
                        "g++"
                    ]
                },
                {
                    "id": "extension",
                    "description": "Output extension",
                    "default": "",
                    "options": [
                        "",
                        ".exe",
                        ".out",
                        ".class"
                    ]
                }
            ]
        }
    ]
}