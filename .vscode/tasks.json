{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build active file",
            "command": "${input:compiler}",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}${input:extension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "inputs": [
        {
            "id": "compiler",
            "type": "pickString",
            "description": "Select compiler/interpreter",
            "options": [
                "python",
                "python -m flask run",
                "node",
                "ruby",
                "Rscript",
                "javac",
                "gcc",
                "g++"
            ],
            "default": "python"
        },
        {
            "id": "extension",
            "type": "pickString",
            "description": "Output extension",
            "options": [
                "",
                ".exe",
                ".out",
                ".class"
            ],
            "default": ""
        }
    ]
}