datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  createdAt DateTime  @default(now())
  purchases Purchase[]
}

model Skin {
  id          String   @id @default(cuid())
  name        String
  game        String
  rarity      String
  price       Float
  imageUrl    String
  description String?
  purchases   Purchase[]
  createdAt   DateTime @default(now())
}

model Purchase {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  skin         Skin     @relation(fields: [skinId], references: [id])
  skinId       String
  purchaseDate DateTime @default(now())
}
